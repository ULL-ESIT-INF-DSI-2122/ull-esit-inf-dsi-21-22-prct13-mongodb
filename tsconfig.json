{
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"  
  ],

  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "strict": true
  }
}